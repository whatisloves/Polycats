{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "minecraft-server/Dockerfile.railway-fixed"
  },
  "deploy": {
    "startCommand": "java -Xmx2G -Xms1G -Djava.net.preferIPv4Stack=true -Djava.net.preferIPv6Addresses=false -jar paper.jar nogui --port 25565 --host 0.0.0.0",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "networking": {
    "port": 25565,
    "protocol": "TCP"
  }
}
